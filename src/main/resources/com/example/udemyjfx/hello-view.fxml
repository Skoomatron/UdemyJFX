<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane
    fx:controller="com.example.udemyjfx.HelloController"
    xmlns:fx="http://javafx.com/fxml"
    alignment="CENTER"
    hgap="10"
    vgap="10"
>
    <Button
        text="Click Me"
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
    />

    <Label
        GridPane.rowIndex="0"
        GridPane.columnIndex="1"
        text="This is a lable."
        textFill="black"
    >
        <font >
            <Font name="Arial italic" size="14"/>
        </font>
    </Label>
    <fx:define>
        <ToggleGroup fx:id="colorToggleGroup"/>
    </fx:define>
    <RadioButton
        GridPane.columnIndex="2"
        GridPane.rowIndex="0"
        text="Red"
        toggleGroup="$colorToggleGroup"
    />
    <RadioButton
        GridPane.columnIndex="3"
        GridPane.rowIndex="0"
        text="Blue"
        toggleGroup="$colorToggleGroup"
    />
    <RadioButton
        GridPane.columnIndex="4"
        GridPane.rowIndex="0"
        text="Green"
        toggleGroup="$colorToggleGroup"
    />

</GridPane>