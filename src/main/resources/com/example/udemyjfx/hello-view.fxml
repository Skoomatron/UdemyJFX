<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
    fx:controller="com.example.udemyjfx.HelloController"
    xmlns:fx="http://javafx.com/fxml"
    alignment="CENTER"
    hgap="10"
    vgap="10"
>

    <TextField
        GridPane.rowIndex="0"
        GridPane.columnIndex="0"
        fx:id="mainField"
    >

    </TextField>
    <Button
        text="Click Me"
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
        onAction="#onButtonClick"
    />
</GridPane>