<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<GridPane
    fx:controller="com.example.udemyjfx.HelloController"
    xmlns:fx="http://javafx.com/fxml"
    alignment="CENTER"
    hgap="10"
    vgap="10"
>
    <Button
        text="Click Me"
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
    />

    <Label
        GridPane.rowIndex="1"
        GridPane.columnIndex="1"
        text="This is a lable."
        textFill="black"
    >
        <font >
            <Font name="Arial italic" size="14"/>
        </font>
    </Label>
    <fx:define>
        <ToggleGroup fx:id="colorToggleGroup"/>
    </fx:define>
    <RadioButton
        GridPane.columnIndex="2"
        GridPane.rowIndex="2"
        text="Red"
        toggleGroup="$colorToggleGroup"
    />
    <RadioButton
        GridPane.columnIndex="3"
        GridPane.rowIndex="2"
        text="Blue"
        toggleGroup="$colorToggleGroup"
        selected="true"
    />
    <RadioButton
        GridPane.columnIndex="4"
        GridPane.rowIndex="2"
        text="Green"
        toggleGroup="$colorToggleGroup"
    />

    <VBox
        GridPane.columnIndex="0"
        GridPane.rowIndex="4"
    >
        <CheckBox
            text="Subscribe"
        />
        <CheckBox
            text="Like"
        />
        <CheckBox
            text="Join Mailing List"
        />
    </VBox>

    <TextField
        GridPane.rowIndex="0"
        GridPane.columnIndex="0"
    />

    <PasswordField
        GridPane.rowIndex="0"
        GridPane.columnIndex="3"
    />

    <ComboBox
        GridPane.columnIndex="0"
        GridPane.rowIndex="5"
    >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Option 1"/>
                <String fx:value="Option 2"/>
                <String fx:value="Option 3"/>
            </FXCollections>
        </items>
    </ComboBox>

    <ChoiceBox
        GridPane.rowIndex="5"
        GridPane.columnIndex="1"
    >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Option 1"/>
                <String fx:value="Option 2"/>
                <String fx:value="Option 3"/>
            </FXCollections>
        </items>
    </ChoiceBox>

</GridPane>